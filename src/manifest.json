{
  "manifest_version": 3,
  "name": "GitHub Issue & PR Manager",
  "version": "1.0.0",
  "description": "Custom filters and annotations for GitHub issues and pull requests",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://*.ghe.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/issues*",
        "https://github.com/*/pulls*",
        "https://*.ghe.com/*/issues*",
        "https://*.ghe.com/*/pulls*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
